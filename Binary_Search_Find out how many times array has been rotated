# Using Binary_Search
class Solution:
    def findRotationCount(self, nums: List[int]) -> int:
        left, right = 0, len(nums) - 1

        while left < right:
            mid = (left + right) // 2

            if nums[mid] > nums[right]:
                left = mid + 1
            else:
                right = mid

        return left   # index of minimum element

# Without Binary_Search:
class Solution:
    def findRotationCount(self, nums: List[int]) -> int:
        n = len(nums)

        for i in range(n - 1):
            if nums[i] > nums[i + 1]:
                return i + 1

        return 0
